@page
@model Faellesskabet_Web.Pages.AdminPanel.DeleteUserModel
@{
	Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<div class="container justify-content-center">

	<div class="row justify-content-center">
		<div class="border-fancy">
			<h3 class="text-center">Vil du slette?</h3>
			<h4 class="text-center mb-4 pb-4">@Model.ApplicationUser.UserName</h4>

			<form method="post">
				<div class="text-center">
					<input type="hidden" asp-for="ApplicationUser.Id" />
					<input type="submit" value="Slet" class="btn btn-danger mx-1" />
					<a class="btn btn-secondary mx-1" asp-page="./Index">Tilbage</a>
				</div>
			</form>
		</div>
	</div>
</div>
