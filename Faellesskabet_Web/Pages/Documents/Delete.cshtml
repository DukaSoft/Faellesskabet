@page
@model Faellesskabet_Web.Pages.Documents.DeleteModel
@{
	Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<div class="row justify-content-center mt-4">
	<div class="col-4 border-fancy">

		<h3>Er du sikker på at du vil slette dette?</h3>
		<div>

			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Title)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Title)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Document.Date)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Document.Date)
				</dd>
			</dl>

			<form method="post">
				<div class="text-center">
					<input type="hidden" asp-for="Document.Id" />
					<input type="submit" value="Slet" class="btn btn-danger" />
					<a class="btn btn-secondary" asp-page="./Index">Tilbage</a>
				</div>
			</form>
		</div>
	</div>
</div>
